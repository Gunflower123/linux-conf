# AUDIO-SETTINGS {{{
set $audio_device "Master"
set $step_size 5
# Use pactl to adjust volume in PulseAudio.
#set $refresh_i3status killall -SIGUSR1 i3status
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -q sset $audio_device $step_size%+ unmute
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -q sset $audio_device $step_size%- unmute
bindsym XF86AudioMute exec --no-startup-id amixer -q set $audio_device toggle
#bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status 
# }}}



